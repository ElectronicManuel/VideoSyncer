{
    "manifest_version": 2,
    "name": "VideoSyncer",
    "default_locale": "en",
    "version": "<%=version%>",
    "author": "ElectronicManuel",
    "description": "__MSG_app_description__",
    "short_name": "VSync",
    "browser_action": {
        <% if (target=='chrome' || target=='opera') { %>
            "default_icon": "content/images/logo512.png",
        <% } %>
        <% if (target=='firefox') { %>
            "default_icon": "content/images/logo.svg",
        <% } %>
        "default_title": "VideoSyncer",
        "default_popup": "content/popup/index.html?panel=main"
    },
    "web_accessible_resources": [
        "content_script/tracker.css",
        "content_script/shadow.css"
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script/main.js"
            ],
            "css": [
                "content_script/tracker.css"
            ],
            "all_frames": true
        }
    ],
    "icons": {
        <% if (target=='chrome' || target=='opera') { %>
            "16": "content/images/logo16.png",
            "24": "content/images/logo24.png",
            "32": "content/images/logo32.png",
            "48": "content/images/logo48.png",
            "64": "content/images/logo64.png",
            "128": "content/images/logo128.png",
            "256": "content/images/logo256.png",
            "512": "content/images/logo512.png"
        <% } %>
        <% if (target=='firefox') { %>
            "16": "content/images/logo16.png",
            "24": "content/images/logo24.png",
            "32": "content/images/logo32.png",
            "48": "content/images/logo48.png",
            "64": "content/images/logo64.png",
            "128": "content/images/logo128.png",
            "256": "content/images/logo256.png",
            "512": "content/images/logo512.png"
        <% } %>
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "contextMenus",
        "identity",
        "storage",
        "webRequest"
    ],
    "content_security_policy":"script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
    "oauth2": {
        "client_id": "<%=config.google.oauth.chromeExtensionClientId%>",
        "scopes": [
            "profile",
            "email",
            "openid"
        ]
    }
    <% if (target=='chrome') { %>
    ,"key": ""
    <% } %>
    <% if (target=='firefox') { %>
    ,"applications": {
        "gecko": {
            "id": "{560ece31-4892-44b1-b1cc-331bad846f57}"
        }
    }
    <% } %>
}