{
	"manifest_version": 2,
	"name": "VideoSyncer_REACT",
	"default_locale": "en_US",
	"version": "5.0.0",
	"author": "ElectronicManuel",
    "description": "VideoSyncer will automatically keep track of your current watching time and enables you to jump back in, right were you left off.",
    "short_name": "ViSync",
    "key": "",
    "oauth2": {
        "client_id": "879765482619-krf1pmj6v6o6lmdhbabluucj629qlt45.apps.googleusercontent.com",
        "scopes": [
            "profile",
            "email",
            "openid"
        ]
    },
	"background": {
		"scripts": [
			"background/main.js"
		],
		"persistent": true
	},
	"icons": {
        "16": "content/images/icon16.png",
        "24": "content/images/icon24.png",
		"32": "content/images/icon32.png",
        "48": "content/images/icon48.png",
        "64": "content/images/icon64.png",
        "128": "content/images/icon128.png",
        "256": "content/images/icon256.png",
        "512": "content/images/icon512.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "content/images/icon16.png",
            "24": "content/images/icon24.png",
            "32": "content/images/icon32.png",
            "48": "content/images/icon48.png",
            "64": "content/images/icon64.png",
            "128": "content/images/icon128.png",
            "256": "content/images/icon256.png",
            "512": "content/images/icon512.png"
		},
		"default_title": "VideoSyncer",
		"default_popup": "content/popup/index.html"
	},
	"permissions": [
		"tabs",
        "contextMenus",
        "identity",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}