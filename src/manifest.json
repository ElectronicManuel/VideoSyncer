{
    "manifest_version": 2,
    "name": "VideoSyncer",
    "default_locale": "en",
    "version": "5.0.0",
    "author": "ElectronicManuel",
    "description": "__MSG_app_description__",
    "short_name": "ViSync",
    "browser_action": {
        "default_icon": {
            "16": "content/images/icon16.png",
            "24": "content/images/icon24.png",
            "32": "content/images/icon32.png",
            "48": "content/images/icon48.png",
            "64": "content/images/icon64.png",
            "128": "content/images/icon128.png",
            "256": "content/images/icon256.png",
            "512": "content/images/icon512.png"
        },
        "default_title": "VideoSyncer",
        "default_popup": "content/popup/index.html?panel=main"
    },
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script/main.js"
            ],
            "css": [
                "content_script/tracker.css"
            ],
            "all_frames": true
        }
    ],
    "icons": {
        "16": "content/images/icon16.png",
        "24": "content/images/icon24.png",
        "32": "content/images/icon32.png",
        "48": "content/images/icon48.png",
        "64": "content/images/icon64.png",
        "128": "content/images/icon128.png",
        "256": "content/images/icon256.png",
        "512": "content/images/icon512.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "contextMenus",
        "identity",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://unpkg.com; object-src 'self'"
}